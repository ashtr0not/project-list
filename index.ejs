<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/index.css">
    </head>
    <body>
        <h1>Project List: </h1>

        <!-- Form to add projects to -->

        <form action="addProject" method="POST">
            <span class="formSpan"><label for="projectName">Project Name: </label></span>
            <input type="text" placeholder="Project" name="projectName">

            <span class="formSpan"><label for="projectDescription">Description: </label></span>
            <textarea name="projectDescription" id="" cols="30" rows="5" ></textarea>

            <span class="formSpan"><label for="projectDescription">Project Link: </label></span>
            <span class="formSpan"><input type="text" placeholder="" name="projectLink"></span>
            <input id="add" type="submit" value="Add Project">
        </form>
        
        <!-- Section that projects would appear -->

        <ul class="projectItems">
            <% for(let i = 0; i < project.length; i++){ %>
                <li class="item">
                        <span id="projectNameS"><%= project[i].projectName %> : </span>
                        <span id="projectDescription"><%= project[i].projectDescription %> </span>
                        <span id="projectLink"><%= project[i].projectLink  %></span>
                        
                        <label for="status">Project Status: </label>
                        <select name="status" id="status">
                            <option value="">Choose Status</option>
                            <option value="red">Not Started</option>
                            <option value="yellow">In Progress</option>
                            <option value="green">Completed</option>
                        </select>

                        <button id="delete">Delete!</button>
                </li>
            <% } %> 

        </ul>

        
        <script src="/js/main.js" async defer></script>
    </body>
</html>