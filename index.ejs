<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/index.css">
    </head>
    <body>
        <h1>Project List: </h1>

        <!-- Form to add projects to -->

        <form action="addProject" method="POST">
            <span class="formSpan"><label for="projectName">Project Name: </label></span>
            <span class="formSpan"><input type="text" placeholder="Project" name="projectName" ></span>

            <span class="formSpan"><label for="projectDescription">Description: </label></span>
            <span class="formSpan"><textarea name="projectDescription" cols="30" rows="5" ></textarea></span>

            <span class="formSpan"><label for="projectLink">Project Link: </label></span>
            <span class="formSpan"><input type="text" placeholder="" name="projectLink" ></span>

            <input id="add" type="submit" value="Add Project">
        </form>
        
        <!-- Section that projects would appear -->

        <ul class="projectItems">
            <% for(let i = 0; i < project.length; i++){ %>
                <li>
                    <div class="item">
                        <span class="projectName"><%= project[i].projectName %> : </span>
                        
                        <label for="status">Project Status: </label>
                        <select name="status" class="status">
                            <option value="">Choose Status</option>
                            <!-- If project[i].color==='red', then output selected OTHERWISE output nothing (which is noted by) -->
                            <option value="red" <%= project[i].color === 'red' ? 'selected' : '' %>>Not Started</option>
                            <option value="yellow" <%= project[i].color === 'yellow' ? 'selected' : '' %>>In Progress</option>
                            <option value="green" <%= project[i].color === 'green' ? 'selected' : '' %>>Completed</option>
                        </select>
                        
                        <span class="projectLink"><%= project[i].projectLink  %></span>
                        <span class="projectDescription"><%= project[i].projectDescription %> </span>

                        <button class="del">Delete</button>
                    </div>
                </li>
            <% } %> 

        </ul>

        
        <script src="/js/main.js" async defer></script>
    </body>
</html>